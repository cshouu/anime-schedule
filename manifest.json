{
  "manifest_version": 2,
  "author": "maple",
  "name": "番剧时间表（anime schedule）",
  "version": "0.0.2",
  "description": "从视频网站获取动漫更新时间表",
  "icons":{
    "16":"images/icon-16.png",
	"48":"images/icon-48.png",
	"128":"images/icon-128.png"
  },
  "background": {
    "scripts":["js/jquery-2.2.0.min.js","background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon-16.png",
    "default_title": "番剧时间表",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://www.dilidili.name/"
  ]
}
